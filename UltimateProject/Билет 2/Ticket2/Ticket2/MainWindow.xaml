<Window x:Class="Ticket2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ticket2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="Размер массива:"/>
                <TextBox x:Name="sizeTextBox" Width="50"/>
                <Label Content="Макс. Значение:"/>
                <TextBox x:Name="maxTextBox" Width="50"/>
            </StackPanel>
            <Button Content="Сортировать" Margin="0,10,0,0" Click="SortButton_Click"/>
            <TextBlock Text="Исходный массив:" Margin="0,10,0,0" />
            <TextBox x:Name="originalArrayTextBox" IsReadOnly="True" TextWrapping="Wrap"/>
            <TextBlock Text="Отсортированный массив:" Margin="0,10,0,0" />
            <TextBox x:Name="sortedArrayTextBox" IsReadOnly="True" TextWrapping="Wrap"/>
            <TextBlock x:Name="complexityTextBlock" Margin="0,10,0,0" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
