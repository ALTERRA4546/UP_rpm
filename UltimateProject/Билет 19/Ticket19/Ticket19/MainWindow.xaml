<Window x:Class="Ticket19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ticket19"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" Background="White">
            <Ellipse x:Name="ball" Width="50" Height="50" Fill="Red" Canvas.Left="0" Canvas.Top="0"/>
        </Canvas>
        <Button Content="Start" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="76" Click="StartButton_Click"/>
    </Grid>
</Window>
