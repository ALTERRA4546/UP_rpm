<Window x:Class="Ticket7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ticket7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="5">
                <Button Content="Открыть" Click="OpenFile_Click" Margin="5"/>
                <Button Content="Сохранить" Click="SaveFile_Click" Margin="5"/>
                <Button Content="Сохранить как" Click="SaveFileAs_Click" Margin="5" />
                <TextBlock x:Name="FilePathTextBlock"  Margin="5" TextWrapping="Wrap"/>
            </WrapPanel>
            <TextBox x:Name="ContentTextBox" Height="250" Margin="5" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            <TextBlock x:Name="StatusTextBlock"  Margin="5" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
