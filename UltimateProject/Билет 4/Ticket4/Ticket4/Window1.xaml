<Window x:Class="Ticket4.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ticket4"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Данные из главного окна:" />
        <TextBlock x:Name="DataFromMainTextBlock" Text="--" Margin="0,5" />
        <TextBlock Text="Данные для отправки обратно:" />
        <TextBox x:Name="ChildTextBox" Margin="0,5" TextChanged="ChildTextBox_TextChanged"/>
    </StackPanel>
</Window>
