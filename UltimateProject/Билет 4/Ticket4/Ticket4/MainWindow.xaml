<Window x:Class="Ticket4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ticket4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Данные для дочернего окна:" />
        <TextBox x:Name="MainTextBox" Margin="0,5" TextChanged="MainTextBox_TextChanged"/>
        <TextBlock Text="Данные из дочернего окна:" />
        <TextBlock x:Name="DataFromChildTextBlock" Text="--" Margin="0,5" />
    </StackPanel>
</Window>
