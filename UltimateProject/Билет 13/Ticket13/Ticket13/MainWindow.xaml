<Window x:Class="Ticket13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ticket13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="fadeTextBlock" Text="Hello, World!" FontSize="24"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0"/>

        <Button Grid.Row="1" Content="Toggle Visibility" Margin="10"
                HorizontalAlignment="Center" Click="ToggleVisibility_Click"/>
    </Grid>
</Window>
